<%- include('templates/cabecera', {tituloweb: 'Modificar cita'}) %>


<div class="container ">
  <h1 class=" justify-content-center text-center">Modificar Cita</h1>
  <div class="row">
    <div class="col ">
      Fecha
    </div>
    <div class="col ">
      Hora Inicio
    </div>
    <div class="col text-center">
      Hora Fin
    </div>
    <div class="col text-center">
      Chofer
    </div>
    <div class="col">
      
    </div>
    <div class="col">
      
    </div>
  </div>
</div>
<form action="/cita-modificada" method="POST">
  <% modifica.forEach(cita => { %>
    <div class="col text-center ">
      <input type="text" name="idCita" value="<%= cita.idCita%>" hidden>
      
    </div>
     
    <% if (cita.fecha.getMonth() < 10) { 
     
     var mes = '0' + (cita.fecha.getMonth() +1) }
     else{
       
        mes = cita.fecha.getMonth()+1;  }%> 
     
     <% if (cita.fecha.getDate() < 10) { 
     
     var dia = '0' + cita.fecha.getDate() } else{
       var dia = cita.fecha.getDate()
     }%>
  <div class="row">
    <div class="col text-center ">
      <input type="date" name="fecha" value="<%= cita.fecha.getFullYear()%>-<%=mes%>-<%=dia%>" >
      
    </div>
    <div class="col text-center ">
      <input id="inicio" type="time" name="inicio" value="<%= cita.viajeInicio %>"  step="10" required>
      
    </div>
    <div class="col text-center ">
      <input id="fin" type="time" name="fin" value="<%= cita.viajeFin %>"  step="10" required>
      
    </div>
    <div class="col text-center ">
    <!-- inicio seleccion chofer -->
          <select name="conductor" id="conductor" required>
            <option value="<%= cita.idchofer %>" ><%= cita.usuarioChofer %></option>
            </select>
            <!-- fin seleccion chofer -->
     </div>
    <div class="col bg-secondary ">
      <button id="saveButton" class="btn btn-btn-success" >Guardar</button>
          
    </div>
    <div class="col bg-primary">
      <a href="/calendario" class="btn btn-danger">Cancelar</a>  
      
    </div>
  </div>
  
  <% }) %>
  </form>
  
                <%- include('templates/footer') %>