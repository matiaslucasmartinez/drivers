<%- include('templates/cabecera', {tituloweb: 'Modificar cita'}) %>


<div class="container ">
  <h1 class=" justify-content-center text-center">Modificar Cita</h1>
  <div class="row">
    <div class="col ">
      Fecha
    </div>
    <div class="col ">
      Hora Inicio
    </div>
    <div class="col text-center">
      Hora Fin
    </div>
    <div class="col text-center">
      Chofer
    </div>
    <div class="col">
      
    </div>
    <div class="col">
      
    </div>
  </div>
</div>
<form action="/editar" method="POST">
  <% modifica.forEach(cita => { %>
    
     
    <% if (cita.fecha.getMonth() < 10) { 
     
     var mes = '0' + (cita.fecha.getMonth() +1) }
     else{
       
        mes = cita.fecha.getMonth()+1;  }%> 
     
     <% if (cita.fecha.getDate() < 10) { 
     
     var dia = '0' + cita.fecha.getDate() } else{
       var dia = cita.fecha.getDate()
     }%>
  <div class="row">
    <div class="col text-center ">
      <input type="date" name="fecha" value="<%= cita.fecha.getFullYear()%>-<%=mes%>-<%=dia%>" disabled>
      
    </div>
    <div class="col text-center ">
      <%= cita.viajeInicio %>
    </div>
    <div class="col text-center ">
      <%= cita.viajeFin %>
    </div>
    <div class="col text-center ">
      <%= cita.usuarioChofer %>
    </div>
    <div class="col bg-secondary ">
      <a href="/cita-modificada/<%= modifica.idCita %>" class="btn btn-success">Guardar</a>    
    </div>
    <div class="col bg-primary">
      <a href="/listar-cita" class="btn btn-danger">Eliminar</a>  
      
    </div>
  </div>
  
  <% }) %>
  </form>
  
                <%- include('templates/footer') %>