<!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#evento">Nuevo Viaje</button> 

  <!-- Modal -->
  <div class="modal fade" id="evento" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel"> Nuevo Viaje</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                
                <form id="eventTitleInput" action="/cita" method="POST">
                  
                  <label for="fecha">Seleccione la fecha : </label><input id="fecha" name="fecha" type="date" value="date" required/> 
                    <label> Hora Inicio Viaje</label><input id="inicio" type="time" name="inicio" value="11:45:00"  step="10" required>
                    <label> Hora Fin Viaje</label><input id="fin" type="time" name="fin" value="11:45:00"  step="10" required>
                    <!-- inicio seleccion chofer -->
                    <select name="conductor" id="conductor" required>
                      <option value="" >Seleccione</option>
                      <% results.forEach(chofer => { %>
                        
                        <option value="<%= chofer.idchofer %>" ><%= chofer.usuarioChofer %></option>
                      
                        
                      <% }) %></select>
                    
                    <!-- fin seleccion chofer -->
                    <button id="saveButton" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exito">Guardar</button>
                  </form>
              </div>

              
