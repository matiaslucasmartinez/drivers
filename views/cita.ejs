<%- include('templates/cabecera', {tituloweb: 'Citas tomadas'}) %>
<script>
cita.use('/', require('./routes/route'));


</script>
<div class="container ">
  <h1 class=" justify-content-center text-center">Listado de Citas</h1>
  <div class="row">
    <div class="col ">
      Fecha
    </div>
    <div class="col ">
      Hora Inicio
    </div>
    <div class="col text-center">
      Hora Fin
    </div>
    <div class="col text-center">
      Chofer
    </div>
    <div class="col">
      
    </div>
    <div class="col">
      
    </div>
  </div>
</div>
<form action="/editar" method="POST">
<% results.forEach(cita => { %>
<div class="row">
  <div class="col text-center ">
    <%= cita.fecha %>
        
  </div>
  <div class="col text-center ">
    <%= cita.viajeInicio %>
  </div>
  <div class="col text-center ">
    <%= cita.viajeFin %>
  </div>
  <div class="col text-center ">
    <%= cita.usuarioChofer %>
  </div>
  <div class="col bg-secondary ">
    <a href="/editar/<%= cita.idCita%>" class="btn btn-success">Modificar</a>    
  </div>
  <div class="col bg-primary">
    <a href="/eliminar/<%= cita.idCita%>" class="btn btn-danger">Eliminar</a>  
    
  </div>
</div>
<% }) %>
</form>
</div> 



  <%- include('templates/footer') %></div>